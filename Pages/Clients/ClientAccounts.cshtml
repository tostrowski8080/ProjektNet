@page
@model WorkshopManager.Pages.Clients.ClientAccountsModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Assign Client to Website User";
}

<h2>Assign Client to Website Account</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="SelectedClientId">Select Client:</label>
        <select asp-for="SelectedClientId" class="form-control" required>
            <option value="">-- Choose a client --</option>
            @foreach (var client in Model.UnassignedClients)
            {
                <option value="@client.Id">
                    @client.FirstName @client.LastName (Phone: @client.PhoneNumber)
                </option>
            }
        </select>
        <span asp-validation-for="SelectedClientId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="SelectedUserId">Assign to Website User:</label>
        <select asp-for="SelectedUserId" class="form-control" required>
            <option value="">-- Choose a user --</option>
            @foreach (var user in Model.Users)
            {
                <option value="@user.Id">
                    @user.UserName (@user.Email)
                </option>
            }
        </select>
        <span asp-validation-for="SelectedUserId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Assign Client</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}