@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WorkshopManager.Pages.Clients.CreateModel
@{
    ViewData["Title"] = "Add Client";
}

<h2>Add Client</h2>

<form method="post">
    <div>
        <label>First name:</label>
        <input asp-for="InputClient.FirstName" />
        <span asp-validation-for="InputClient.FirstName" class="text-danger"></span>
    </div>
    <div>
        <label>Last name:</label>
        <input asp-for="InputClient.LastName" />
        <span asp-validation-for="InputClient.LastName" class="text-danger"></span>
    </div>
    <div>
        <label>Phone number:</label>
        <input asp-for="InputClient.PhoneNumber" />
        <span asp-validation-for="InputClient.PhoneNumber" class="text-danger"></span>
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="InputClient.Email" />
        <span asp-validation-for="InputClient.Email" class="text-danger"></span>
    </div>
    <button type="submit">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}