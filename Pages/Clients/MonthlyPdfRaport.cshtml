@page
@model WorkshopManager.Pages.Clients.MonthlyPdfRaportModel
@{
    ViewData["Title"] = "Raport miesięczny";
}

<h2>Raport napraw wykonanych w miesiącu</h2>

<form method="get">
    <div class="row g-3 align-items-end">
        <div class="col-md-2">
            <label asp-for="SelectedMonth" class="form-label">Miesiąc:</label>
            <select asp-for="SelectedMonth" class="form-select">
                @for (int i = 1; i <= 12; i++)
                {
                    <option value="@i">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(i)</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <label asp-for="SelectedYear" class="form-label">Rok:</label>
            <input asp-for="SelectedYear" class="form-control" />
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Pobierz PDF</button>
        </div>
    </div>
</form>

