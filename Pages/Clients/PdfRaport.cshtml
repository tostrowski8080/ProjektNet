@page
@model WorkshopManager.Pages.Clients.RepairReportModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Client repairs raport";
}

<h2>Wygeneruj raport PDF</h2>

<form method="get">
    <div class="mb-3">
        <label asp-for="SelectedClientId" class="form-label">Choose a client:</label>
        <select asp-for="SelectedClientId" asp-items="Model.ClientList" class="form-select"></select>
    </div>
    <button type="submit" class="btn btn-primary">Download PDF raport</button>
</form>

