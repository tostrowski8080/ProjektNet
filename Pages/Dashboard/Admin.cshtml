@page
@model WorkshopManager.Pages.Dashboard.AdminModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<table>
    <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@Model.UserRoles[user.Id]</td>
                <td>
                    <form method="post">
                        <input type="hidden" name="SelectedUserId" value="@user.Id" />
                        <select name="SelectedRole">
                            <option value="Admin">Admin</option>
                            <option value="Mechanic">Mechanic</option>
                            <option value="Receptionist">Receptionist</option>
                            <option value="Client">Client</option>
                        </select>
                        <button type="submit">Change role</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<ul>
    <li><a asp-page="/Clients/Create">Add Client</a></li>
    <li><a asp-page="/Vehicles/Create">Add Vehicle</a></li>
    <li><a asp-page="/ServiceOrders/Create">Add Service Order</a></li>
</ul>
