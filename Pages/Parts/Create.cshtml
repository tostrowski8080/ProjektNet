@page
@model WorkshopManager.Pages.Parts.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add New Part";
}

<h2>Add New Part</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="NewPart.Name" class="form-label"></label>
        <input asp-for="NewPart.Name" class="form-control" />
        <span asp-validation-for="NewPart.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NewPart.Price" class="form-label"></label>
        <input asp-for="NewPart.Price" class="form-control" />
        <span asp-validation-for="NewPart.Price" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="NewPart.Stock" class="form-label"></label>
        <input asp-for="NewPart.Stock" class="form-control" />
        <span asp-validation-for="NewPart.Stock" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Add Part</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}