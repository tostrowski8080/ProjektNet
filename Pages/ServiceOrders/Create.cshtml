@page
@model WorkshopManager.Pages.ServiceOrders.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "New Service Order";
}

<h2>New Service Order</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.VehicleId">Choose vehicle:</label>
        <select asp-for="Input.VehicleId" class="form-control" required>
            <option value="">-- choose a vehicle --</option>
            @foreach (var vehicle in Model.Vehicles)
            {
                <option value="@vehicle.Id">
                    @vehicle.Make @vehicle.Model (@vehicle.RegistrationNumber)
                </option>
            }
        </select>
        <span asp-validation-for="Input.VehicleId" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Input.Description">Description:</label>
        <textarea asp-for="Input.Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Input.Description" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Input.WorkerId">Assign a mechanic:</label>
        <select asp-for="Input.WorkerId" class="form-control">
            <option value="">-- no assignment --</option>
            @foreach (var mech in Model.Mechanics)
            {
                <option value="@mech.Id">@mech.UserName</option>
            }
        </select>
        <span asp-validation-for="Input.WorkerId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create order</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
